# NextCare Environment Configuration Template
# Copy this file to .env and modify the values as needed

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nextcare
DB_USER=nextcare_user
DB_PASSWORD=your_database_password_here
DB_SSL_MODE=prefer

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Application Settings
ENABLE_MOCK_SENSORS=True
SENSOR_UPDATE_INTERVAL=60
MAX_ALERTS_PER_MACHINE=100
ALERT_RETENTION_DAYS=90
SENSOR_DATA_RETENTION_DAYS=365

# Security Settings
SESSION_TIMEOUT_HOURS=24

# Email Configuration (optional - for alerts and notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@nextcare.com
ADMIN_EMAIL=admin@nextcare.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/nextcare.log

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Cache Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Development Settings (only for development environment)
# WTF_CSRF_ENABLED=False  # Uncomment to disable CSRF for API testing

# Production Settings (only for production environment)
# SESSION_COOKIE_SECURE=True  # Enable for HTTPS
# WTF_CSRF_ENABLED=True       # Always enable CSRF in production